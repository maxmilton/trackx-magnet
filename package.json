{
  "name": "harvest-errors",
  "version": "0.0.1",
  "description": "Browser extension to collect errors from web pages with the trackx client.",
  "repository": "maxmilton/harvest-errors",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.mjs,.ts .",
    "lint:ts": "tsc --project test --noEmit",
    "prebuild": "rm -rf dist; cp -r static dist",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'",
    "zip": "sh -c 'test -z \"$(git status --porcelain)\"' && pnpm run lint && pnpm run test && pnpm run build && cd dist && zip ../chrome-extension.zip *"
  },
  "dependencies": {
    "trackx": "0.0.9"
  },
  "devDependencies": {
    "@types/chrome": "0.0.145",
    "@types/node": "15.12.2",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "c8": "7.7.3",
    "esbuild": "0.12.9",
    "esbuild-minify-templates": "0.4.1",
    "esbuild-register": "2.6.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-unicorn": "33.0.1",
    "git-ref": "0.2.0",
    "prettier": "2.3.1",
    "prettier-plugin-pkg": "0.9.0",
    "prettier-plugin-sh": "0.6.1",
    "terser": "5.7.0",
    "typescript": "4.3.2",
    "uvu": "0.5.1"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
